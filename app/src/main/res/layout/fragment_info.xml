<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.UserInfoFragment">

    <TextView
        android:id="@+id/f_info_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="暂无登录信息"
        android:textStyle="italic"
        android:alpha="0.5"
        android:gravity="center"
        android:textSize="30sp"

        />
    <TextView
        android:visibility="gone"
        android:id="@+id/f_info_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="17sp"
        android:gravity="center"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/f_info_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/f_info_name"
        />


        <TextView
            android:id="@+id/f_info_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="暂无浏览记录"
            android:gravity="center"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@id/f_info_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_info_love"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/f_info_car"
            android:layout_below="@id/f_info_love"
            />



</RelativeLayout>
